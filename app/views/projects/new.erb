<h2>Create New Project:</h2>
<br>

<form method="post" action="/projects" name="new_project">
    <label for="project_name">Project Name:</label>
    <input type="text" id="project_name" name="new_project[project_name]" >
	
	
    
	<label for="address">Site Address:</label>
    <input type="text" id="address" name="new_project[address]" >

    <br>

    <label for="scheduled_durations">Scheduled Duration:</label>
    <input type="text" id="scheduled_duration" name="new_project[scheduled_duration]" >

	<label for="start_date">Start Date:</label>
    <input type="date" id="start_date" name="new_project[start_date]" >

    <label for="finish_date">Finish Date:</label>
    <input type="date" id="finish_date" name="new_project[finish_date]" >

    <br>

    <hr>
    <br>
    Current Users:
    <br>
    <% @users.each do |user|%>
        <input type="checkbox" id="<%=user.id%>" name="project[user_ids][]" value="<%=user.id%>">
        <label for="<%=user.id%>"><%=user.first_name%> <%=user.last_name%></label><br>
    <%end%>
    <br>
    

    <hr>
    <input type="submit" name="submit" id="submit" value="Create New Project">
</form>
